---
import '../base.css';
import 'antd/dist/reset.css';

const items = [
  {
    title: 'Headless UI',
    url: '/hui',
    links: {
      docs: 'https://headlessui.com/',
      repo: 'https://github.com/tailwindlabs/headlessui',
      npm: 'https://www.npmjs.com/package/@headlessui/react',
    },
  },
  {
    title: 'daisyUI',
    url: '/daisy',
    links: {
      docs: 'https://daisyui.com/docs/install/',
      repo: 'https://github.com/daisyui/react-daisyui',
      npm: 'https://www.npmjs.com/package/react-daisyui',
    },
  },
  {
    title: 'Ant Design',
    url: '/antd',
    links: {
      docs: 'https://ant.design/',
      repo: 'https://github.com/ant-design/ant-design',
      npm: 'https://www.npmjs.com/package/antd',
    },
  },
  {
    title: 'ChakraUI',
    url: '/chakra',
    links: {
      docs: 'https://v2.chakra-ui.com/getting-started',
      repo: 'https://github.com/chakra-ui/chakra-ui',
      npm: 'https://www.npmjs.com/package/@chakra-ui/react',
    },
  },
  {
    title: 'Radix UI',
    url: '/radix',
    links: {
      docs: 'https://www.radix-ui.com/',
      repo: 'https://github.com/radix-ui/primitives',
      repo1: 'https://github.com/radix-ui/themes',
      npm: 'https://www.npmjs.com/search?q=radix-ui%20',
    },
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro UI Libraries Check</title>
  </head>
  <body class="flex h-screen">
    <div class="flex h-full w-64 flex-col bg-gray-800 text-white">
      <nav class="flex-1 p-4">
        <ul class="flex h-full flex-col">
          {
            items.map((item) => (
              <li>
                <div class="mb-2 w-full truncate text-3xl font-bold underline">
                  <a href={item.url}>{item.title}</a>
                </div>
                <p class="mb-2 text-base">
                  <a
                    href={`${item.links.docs}`}
                    target="_blank"
                    class="daisy-link-hover daisy-link inline w-full truncate text-blue-500"
                  >
                    <b>Docs</b>
                  </a>
                </p>
                <p class="mb-2 text-base">
                  <a
                    href={`${item.links.repo}`}
                    target="_blank"
                    class="daisy-link-hover daisy-link inline w-full truncate text-blue-500"
                  >
                    <b>Repository</b>
                  </a>
                </p>
                {item.links.repo1 && (
                  <p class="mb-2 text-base">
                    <a
                      href={`${item.links.repo1}`}
                      target="_blank"
                      class="daisy-link-hover daisy-link inline w-full truncate text-blue-500"
                    >
                      <b>Repository #1</b>
                    </a>
                  </p>
                )}
                <p class="mb-2 text-base">
                  <a
                    href={`${item.links.npm}`}
                    target="_blank"
                    class="daisy-link-hover daisy-link inline w-full truncate text-blue-500"
                  >
                    <b>NPM</b>
                  </a>
                </p>
              </li>
            ))
          }
          <li class="mt-auto text-center">
            <h3>
              <a href="/merged" class="daisy-link-hover daisy-link underline">
                Click here to see all libraries on a single page
              </a>
            </h3>
          </li>
        </ul>
      </nav>
    </div>

    <div class="flex-1 overflow-y-auto bg-gray-100">
      <div
        class="sticky top-0 z-10 flex items-center justify-end bg-gray-800 p-4 text-center"
      >
        <a href="/">
          <h1 class="flex items-center justify-center text-3xl text-white">
            Astro
            <svg viewBox="0 0 24 24" height="1em" width="1em" class="mx-2">
              <path
                d="M15.551.6c.196.244.296.572.496 1.229l4.368 14.347a18.18 18.18 0 00-5.222-1.768L12.35 4.8a.37.37 0 00-.71.002l-2.81 9.603a18.175 18.175 0 00-5.245 1.771L7.974 1.827c.2-.656.3-.984.497-1.227a1.613 1.613 0 01.654-.484C9.415 0 9.757 0 10.443 0h3.135c.686 0 1.03 0 1.32.117A1.614 1.614 0 0115.55.6z"
                fill="white"
              >
              </path>
              <path
                d="M16.074 16.86c-.72.616-2.157 1.035-3.812 1.035-2.032 0-3.735-.632-4.187-1.483-.161.488-.198 1.046-.198 1.402 0 0-.106 1.75 1.111 2.968 0-.632.513-1.145 1.145-1.145 1.083 0 1.082.945 1.081 1.712v.069c0 1.164.711 2.161 1.723 2.582a2.347 2.347 0 01-.236-1.029c0-1.11.652-1.523 1.41-2.003.602-.383 1.272-.807 1.733-1.66a3.129 3.129 0 00.378-1.494 3.14 3.14 0 00-.148-.954z"
                fill="#FF5B00"
              >
              </path>
            </svg>
            UI Libraries Check
          </h1>
        </a>
      </div>

      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    background-color: #fdfdfd;
  }
</style>
