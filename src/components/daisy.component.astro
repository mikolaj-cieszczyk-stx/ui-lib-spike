---
import { Button } from '../components/daisyUI/Button';
import { Checkbox } from '../components/daisyUI/Checkbox';
import { Input } from '../components/daisyUI/Input';
import { Select } from '../components/daisyUI/Select';
import { Switch } from '../components/daisyUI/Switch';
import { Typography } from '../components/daisyUI/Typography';
---

<main class="grid min-h-screen place-items-center p-4">
  <div class="flex flex-col gap-4 border-2 p-6">
    <h1 class="text-center text-4xl">daisyUI</h1>
    <hr />
    <h2 class="mr-auto font-bold">Switch</h2>
    <Switch />

    <hr />
    <h2 class="mr-auto font-bold">Typography</h2>
    <Typography />

    <hr />
    <h2 class="mr-auto font-bold">Input</h2>
    <Input />

    <hr />
    <h2 class="mr-auto font-bold">Select</h2>
    <Select />

    <hr />
    <h2 class="mr-auto font-bold">Checkbox</h2>
    <Checkbox />

    <hr />
    <h2 class="mr-auto font-bold">Button</h2>
    <Button />
  </div>
</main>
