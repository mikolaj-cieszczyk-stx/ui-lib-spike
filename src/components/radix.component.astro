---
import Button from './RadixUi/Button';
import Checkbox from './RadixUi/Checkbox';
import Input from './RadixUi/Input';
import Select from './RadixUi/Select';
import SwitchDemo from './RadixUi/Switch';
import TypographyExample from './RadixUi/Typography';
---

<main class="grid min-h-screen place-items-center p-4">
  <div class="flex flex-col gap-4 border-2 p-6">
    <h1 class="text-center text-4xl">RadixUI</h1>

    <hr />
    <h2 class="mr-auto font-bold">Switch</h2>
    <SwitchDemo client:load />

    <hr />
    <h2 class="mr-auto font-bold">Typography</h2>
    <TypographyExample />

    <hr />
    <h2 class="mr-auto font-bold">Input</h2>
    <Input />

    <hr />
    <h2 class="mr-auto font-bold">Select</h2>
    <Select client:load />

    <hr />
    <h2 class="mr-auto font-bold">Checkbox</h2>
    <Checkbox client:load />

    <hr />
    <h2 class="mr-auto font-bold">Button</h2>
    <Button client:load />
  </div>
</main>
