---
import { Button, HuiButton } from "../components/Button/Button";
import { Checkbox, HuiCheckbox } from "../components/Checkbox/Checkbox";
import { Icon } from "../components/Icon/Icon";
import { AntDesignInput, HeadlessUiInput } from "../components/Input/Input";
import { Select, HuiSelect } from "../components/Select/Select";
import { AntDesignSwitch, HeadlessUiSwitch } from "../components/Switch/Switch";
import {
  Link,
  Text,
  Title,
  HuiTypographyComponent,
} from "../components/Typography/Typography";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main class="grid grid-cols-2 gap-4">
    {/* Headless UI Section */}
    <div class="flex flex-col gap-2 border-2 p-2">
      <h1 class="text-center text-4xl">Headless UI</h1>

      {/* Headless UI Switches */}
      <hr />
      <h2 class="mr-auto font-bold">Switch</h2>

      <HeadlessUiSwitch client:load />
      <HeadlessUiSwitch client:load label="Label" />

      {/* Headless UI Typography */}
      <hr />
      <h2 class="mr-auto font-bold">Typography</h2>

      <HuiTypographyComponent />

      {/* Headless UI Input */}
      <hr />
      <h2 class="mr-auto font-bold">Input</h2>

      <HeadlessUiInput />

      {/* Headless UI Select */}
      <hr />
      <h2 class="mr-auto font-bold">Select</h2>

      <HuiSelect client:load />

      {/* Headless UI Checkbox */}
      <hr />
      <h2 class="mr-auto font-bold">Checkbox</h2>

      <HuiCheckbox />

      {/* Headless UI Button */}
      <hr />
      <h2 class="mr-auto font-bold">Button</h2>

      <HuiButton>elo</HuiButton>
    </div>
    {/* daisyUI Section */}
    <div class="flex flex-col gap-2 border-2 p-2">
      <h1 class="text-center text-4xl">daisyUI</h1>
      <hr />
      <h2 class="mr-auto font-bold">Switch</h2>
      <input
        type="checkbox"
        class="daisy-toggle-success daisy-toggle"
        checked="checked"
      />
      <input
        type="checkbox"
        class="daisy-toggle-warning daisy-toggle"
        checked="checked"
      />
      <input
        type="checkbox"
        class="daisy-toggle-info daisy-toggle"
        checked="checked"
      />
      <input
        type="checkbox"
        class="daisy-toggle-error daisy-toggle"
        checked="checked"
      />

      <hr />
      <h2 class="mr-auto font-bold">Typography</h2>
      <div class="prose">
        <h1 class="text-6xl">This is a Heading 1</h1>
        <h1 class="text-4xl">This is a Heading 2</h1>
        <h1 class="text-3xl">This is a Heading 3</h1>
        <p>
          This is a paragraph. It has some text describing something
          interesting.
        </p>
        <blockquote
          class="text-xl font-semibold italic text-gray-900 underline"
        >
          This is a blockquote, providing some highlighted text or a quote.
        </blockquote>
        <ul class="ax-w-md list-inside list-disc space-y-1 text-gray-900">
          <li>This is an item in a list.</li>
          <li>Here's another item.</li>
          <li>And another one.</li>
        </ul>

        <ol class="max-w-md list-inside list-decimal space-y-1 text-gray-900">
          <li>This is an item in a list.</li>
          <li>Here's another item.</li>
          <li>And another one.</li>
        </ol>
        <a
          href="https://wp.pl"
          target="_blank"
          class="font-medium text-blue-600 hover:underline dark:text-blue-500"
        >
          daisyUI Link
        </a>
      </div>

      <hr />
      <h2 class="mr-auto font-bold">Input</h2>
      <!-- <input
        type="text"
        placeholder="Type here"
        class="daisy-input-bordered daisy-input block w-full max-w-xs rounded border border-gray-300 bg-gray-50 p-2 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500"
      /> -->

      <label class="input input-bordered flex items-center gap-2">
        <input type="text" class="grow" placeholder="Search" />
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          fill="currentColor"
          class="h-4 w-4 opacity-70"
        >
          <path
            fill-rule="evenodd"
            d="M9.965 11.026a5 5 0 1 1 1.06-1.06l2.755 2.754a.75.75 0 1 1-1.06 1.06l-2.755-2.754ZM10.5 7a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Z"
            clip-rule="evenodd"></path>
        </svg>
      </label>

      <hr />
      <h2 class="mr-auto font-bold">Select</h2>
      <select class="daisy-select w-full max-w-xs">
        <option disabled selected>Pick your favorite Simpson</option>
        <option>Homer</option>
        <option>Marge</option>
        <option>Bart</option>
        <option>Lisa</option>
        <option>Maggie</option>
      </select>

      <details class="dropdown">
        <summary class="btn m-1">open or close</summary>
        <ul
          class="menu dropdown-content z-[1] w-52 rounded-box bg-base-100 p-2 shadow"
        >
          <li><a>Item 1</a></li>
          <li><a>Item 2</a></li>
        </ul>
      </details>

      <hr />
      <h2 class="mr-auto font-bold">Checkbox</h2>
      <input type="checkbox" checked="checked" class="checkbox" />

      <hr />
      <h2 class="mr-auto font-bold">Button</h2>
      <div class="grid w-1/2 grid-cols-2 gap-2">
        <button
          class="flex h-6 w-max items-center rounded-full bg-green-600 px-2 py-1 text-sm font-medium text-white hover:bg-green-700 active:bg-green-800 disabled:bg-gray-400"
          >Button</button
        >
        <button
          disabled
          class="flex h-6 w-max items-center rounded-full bg-green-600 px-2 py-1 text-sm font-medium text-white hover:bg-green-700 active:bg-green-800 disabled:bg-gray-400"
          >Button</button
        >

        <button
          class="flex h-6 w-max items-center justify-center gap-2 rounded-full bg-green-600 px-2 py-1 text-center text-sm font-medium text-white hover:bg-green-700 active:bg-green-800 disabled:bg-gray-400"
          >Button<svg
            viewBox="0 0 1024 1024"
            fill="currentColor"
            height="16px"
            width="16px"
          >
            <path
              d="M696 480H544V328c0-4.4-3.6-8-8-8h-48c-4.4 0-8 3.6-8 8v152H328c-4.4 0-8 3.6-8 8v48c0 4.4 3.6 8 8 8h152v152c0 4.4 3.6 8 8 8h48c4.4 0 8-3.6 8-8V544h152c4.4 0 8-3.6 8-8v-48c0-4.4-3.6-8-8-8z"
            ></path>
